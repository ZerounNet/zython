
.PHONY: native
native: ${DIST_NATIVE}/.built

.PHONY: wasm
wasm: ${DIST_WASM}/.built

.PHONY: clean
clean:
	rm -rf ${BUILD} ${DIST}

${TARBALL}:
	mkdir -p ${UPSTREAM}
	curl -L ${URL} -o ${TARBALL}

${BUILD_NATIVE}: ${TARBALL}
	rm -rf ${BUILD_NATIVE}
	mkdir -p ${BUILD_NATIVE}
	tar xf ${TARBALL} -C ${BUILD_NATIVE} --strip-components=1

${BUILD_WASM}: ${TARBALL}
	rm -rf ${BUILD_WASM}
	mkdir -p ${BUILD_WASM}
	tar xf ${TARBALL} -C ${BUILD_WASM} --strip-components=1
