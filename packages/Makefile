# This is a Makefile of common definitions that is used by all packages.

INIT_CWD:=$(shell dirname $(realpath $(firstword $(MAKEFILE_LIST))))
UPSTREAM = ${INIT_CWD}/../../upstream/sources

DIST = ${INIT_CWD}/dist
DIST_NATIVE = ${DIST}/native
DIST_WASM = ${DIST}/wasm

BUILD = ${INIT_CWD}/build
BUILD_NATIVE = ${BUILD}/native
BUILD_WASM = ${BUILD}/wasm


