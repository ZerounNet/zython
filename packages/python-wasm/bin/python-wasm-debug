#!/usr/bin/env bash

export SCRIPTPATH="$( cd -- "$(dirname "`readlink -f $0`")" >/dev/null 2>&1 ; pwd -P )"

# node-terminal-debug disables (1) workers, and (2) using the python.zip bundle.
# This makes debug logging much easier.  It obviously only works if you built everything
# from source in place and can't be used from an npm install.

if [ $# -eq 0 ]; then
    node -r "$SCRIPTPATH"/../dist/python/node-terminal-debug.js
else
    node "$SCRIPTPATH"/../dist/python/node-terminal-debug.js "$@"
fi

