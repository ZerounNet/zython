{
  "name": "python-wasm",
  "version": "0.10.0",
  "description": "python-wasm -- Web Assembly Python for Node.js and the Browser",
  "main": "./dist/python/node.js",
  "browser": "./dist/python/browser.js",
  "files": ["dist/*", "README.md", "package.json", "tsconfig.json", "Makefile"],
  "scripts": {
    "build": "make all",
    "clean": "make clean",
    "tsc": "npx tsc -w",
    "test": "jest --forceExit ./dist # TODO: fix this hang issue with forceExit",
    "test-watch": "jest --watch ./dist",
    "strip": "find dist/ -type f -name \"*.wasm\" | xargs -n1 wasm-strip",
    "prepublishOnly": "npm run strip"
  },
  "bin": "./bin/python-wasm",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sagemathinc/python-wasm.git"
  },
  "keywords": ["python", "webassembly"],
  "author": "William Stein <wstein@sagemath.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/sagemathinc/python-wasm/issues"
  },
  "homepage": "https://github.com/sagemathinc/python-wasm/tree/main/packages/python-wasm",
  "workspaces": ["../wasi", "../dylink"],
  "dependencies": {
    "@wapython/wasi": "^1.0.1",
    "awaiting": "^3.0.0",
    "callsite": "^1.0.0",
    "date-format": "^4.0.13",
    "debug": "^4.3.4",
    "dylink": "^0.3.0"
  },
  "devDependencies": {
    "@types/callsite": "^1.0.31",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.7.12",
    "jest": "^27.2.1",
    "typescript": "^4.7.4",
    "wabt": "^1.0.29"
  },
  "optionalDependencies": {
    "posix": "^4.2.0"
  }
}
